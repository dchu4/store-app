<h1>Create New Supplier:</h1>

<%= form_tag "/suppliers", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :phone %>
    <%= text_field_tag :phone %>
  </div>

  <%= submit_tag "Create Supplier" %>
<% end %>