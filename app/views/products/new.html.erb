<%= form_tag '/books', method: :post do %>
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :author %>
    <%= text_field_tag :author %>
  </div>
  <div>
    <%= label_tag :genre %>
    <%= text_field_tag :genre %>
  </div>
  <div>
    <%= label_tag :synopsis %>
    <%= text_field_tag :synopsis %>
  </div>
  <div>
    <%= label_tag :image %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :quantity %>
    <%= text_field_tag :quantity %>
  </div>
  <div>
    <%= label_tag :rating %>
    <%= text_field_tag :rating %>
  </div>

  <%= submit_tag 'Make Book' %>
<% end %>