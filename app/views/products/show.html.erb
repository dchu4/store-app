<h1><%= @book.title %></h1>

<div class="col-md-12">
  <div class="col-md-4">
    <h3>Title: <%= @book.title %></h3>
    <h3>Author: <%= @book.author %></h3>
    <h3>Genre: <%= @book.genre %></h3>
    <h3>Description: <%= @book.description %></h3>
    <h3><%= @book.synopsis %></h3>
    <h3>Price: <%= @book.price %></h3>
    <h3>Stock: <%= @book.quantity %></h3>
    <h3>Rating: <%= @book.rating %></h3>
    <h3>Tax: <%= number_to_currency(@book.tax) %></h3>
    <h3>Sale Message: <%= @book.sale_message %></h3>
    <h3>Total: <%= number_to_currency(@book.total) %></h3>

    <%= link_to 'Edit', "/books/#{@book.id}/edit" %>

    

    <%= link_to 'Delete', "/books/#{@book.id}", method: :delete %>
  </div>

    <%= form_tag '/carted_products', method: :post do %>
    <div>
      <%= label_tag :quantity %>
      <%= text_field_tag :quantity %>
    </div>
    <div>
      <%= label_tag :product_id %>
      <%= text_field_tag :product_id %>
    </div>


    <%= submit_tag 'Add To Cart' %>

  <% end %>

  <h3>Categories</h3>

  <% @categories.each do |category| %>
    <h4><%= category.genre %></h4>
  <% end %>



  <div class="col-md-4">
    <p> image_tag @book.image </p>
  </div>

</div>